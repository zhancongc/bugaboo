<import src="../we-cropper/we-cropper.wxml"/>

<view class='container' wx:if="{{wrapper}}">
  <view class='container-content'>
    <view class="section">
      <view class="section-title">参赛组别选择：</view>
      <picker bindchange="bindPickerChange" value="{{gameGroupIndex}}" range="{{gameGroup}}">
        <view class="picker">
          当前选择：{{gameGroup[gameGroupIndex]}}
        </view>
      </picker>
    </view>
    <button class='bottomButton' bindtap='choosePhotograph'>上传照片/拍照</button>
  </view>
</view>


<view class="cropper-wrapper" wx:if="{{wrapper}}">
    <template is="we-cropper" data="{{...cropperOpt}}"/>
</view>
<view class="cropper-buttons" style="color: {{cropperOpt.boundStyle.color}}" wx:if="{{warpper}}">
    <view class="upload" bindtap="uploadTap">
        生成作品
    </view>
    <view class="getCropperImage" bindtap="getCropperImage">
        上传作品
    </view>
</view>
