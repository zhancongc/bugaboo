<!--pages/preview/pewview.wxml-->
<view class="pages">
<i-row>
    <i-col span="3" offset="2" i-class="col-class">
    <view style="text-align:center;">恭喜</view></i-col>
    <i-col span="2" i-class="col-class">
    <i-avatar src="{{avatarUrl}}" size="small" shape="square"></i-avatar></i-col>
    <i-col span="17" i-class="col-class">{{nickName}}</i-col>
</i-row>

<i-row>
  <i-col span="20" offset="2" i-class="col-class">
  <view style="margin-top: 30rpx;">成功参与Bugaboo新年祝福活动</view></i-col>
  <i-col span="20" offset="2" i-class="col-class">
  <view style="margin-top: 30rpx; margin-bottom: 30rpx;">我的作品：</view></i-col>
</i-row>

<i-row style="vertical-align: middle; text-align:center;">
  <i-col span="24" i-class="col-class">
    <image style='width: 640rpx; height: 640rpx;'  src="{{ compositionUrl }}"></image>
  </i-col>
</i-row>

<i-row>
  <i-col span="8" offset="3" i-class="col-class" style="margin-top: 50rpx;">
    <view>
      <i-button open-type='share'>邀请送祝福</i-button>
    </view>
  </i-col>
  <i-col span="8" offset="2" i-class="col-class">
    <view>
      <i-button bind:click="toRankingList">查看排名</i-button>
    </view>
  </i-col>
</i-row>

<i-row>
  <i-col span="4" offset="10">
    <view class='bottomText'>福利奖励</view>
  </i-col>
</i-row>
<i-row>
  <i-col span="24" offset="0">
    <i-button bind:click="toView">到分享页面</i-button>
    <i-button open-type='contact'>到客服页面</i-button>
    <i-button bind:click="toRaffle">到抽奖页面</i-button>
    <i-button bind:click="toAwardList">到奖品列表页面</i-button>
    <i-button bind:click="toAuthorize">到授权页面</i-button>
    <i-button bind:click="toCompositionCut">到作品上传页面</i-button>
    <i-button bind:click="toLoading">到加载页面</i-button>
  </i-col>
</i-row>
</view>
