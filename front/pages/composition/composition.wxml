<!--pages/composition/composition.wxml-->
<i-row>

  <i-col span="2" offset="11">
    <image class="flower" src='/images/flower.png'></image>
  </i-col>

  <i-col span="16" offset="4">
    <view class="title">上传成功
    </view>
  </i-col>

  <i-col span="24" i-class="col-class">
    <view class="back-image preview">
    <image class="{{ objectCompositionAngle[compositionAngle] }}" src="{{compositionSrc}}"></image>
    </view>
  </i-col>

  <i-col span="16" offset="3">
    <view class="sub-title">Bugaboo用心说爱你：
    </view>
  </i-col>

  <i-col span="20" offset="2" i-class="col-class">
    <view class="back-image textarea-image"></view>
    <view class='textarea'>
      <textarea  maxlength='128' bindblur='setDescription' placeholder-style="color: #ab0c09" placeholder='写下您的新年期许'></textarea>
    </view>
  </i-col>

  <view class='back-image bottom-button-left' bindtap='rotate'>旋转</view>

  <view class='back-image bottom-button-right' bindtap='uploadComposition'>上传</view>

</i-row>

