<!--pages/composition/composition.wxml-->
<i-row>
  <i-col span="24" i-class="col-class">
    <view class="preview">
    <image class="{{ objectCompositionAngle[compositionAngle] }}" src="{{compositionSrc}}"></image>
    </view>
  </i-col>

  <view class='bottom-button-left'>
    <i-col span="16" offset="4" i-class="col-class">
      <view class='bottom-button-image'>
        <image src='/images/small_btn.png' class='small-button'></image>
      </view>
      <view class='bottom-button-text' bindtap='rotate'>旋转</view>
    </i-col>
  </view>

  <view class='bottom-button-right'>
    <i-col span="16" offset="4" i-class="col-class">
      <view class='bottom-button-image'>
        <image src='/images/small_btn.png' class='small-button'></image>
      </view>
      <view class='bottom-button-text' bindtap='toPreview'>上传</view>
    </i-col>
  </view>

</i-row>

