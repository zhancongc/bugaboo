<!--pages/award/award.wxml-->
<view class="pages">
<i-row>
    <i-col span="22" offset="1" i-class="col-class">
    <view style="margin-top: 200rpx;font: 42rpx; text-align: center;">Bugaboo</view></i-col>
    <i-col span="22" offset="1" i-class="col-class">
    <view style='text-align: center; margin-top: 20rpx;'>您的领奖二维码是：
    </view></i-col>
    <i-col span="22" offset="1" i-class="col-class">
    <view style='text-align: center; margin-top: 20rpx;'><image src="../../images/Bugaboo.jpg" mode="aspectFit"></image></view>
    </i-col>
