    <i-col span="7" offset="0" i-class="col-class">
      <i-button bind:click="toAward" data-awardrecird_id="{{item.awardrecord_id}}">我要参与</i-button>
    </i-col>
    <i-col span="7" offset="1" i-class="col-class">
      <i-button bind:click="toAward" data-awardrecird_id="{{item.awardrecord_id}}">我的奖品</i-button>
    </i-col>
    <i-col span="8" offset="1" i-class="col-class">
      <i-button bind:click="toAward" data-awardrecird_id="{{item.awardrecord_id}}">保存到相册</i-button>
    </i-col>
